<AuthorizeView>
    <Authorized>        
        
        <MudButton Href="Account/Logout"
                   Rel="nofollow"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Disabled="@false">
            Log Out
        </MudButton> 
        
    </Authorized>
    <NotAuthorized>
        
        <MudButton Href="Account/Login"
                   Rel="nofollow"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Disabled="@false">
            Log In
        </MudButton>
        
    </NotAuthorized>
</AuthorizeView>